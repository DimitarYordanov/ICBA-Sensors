    <div class="row-fluid">
        <div id="footer" class="span12"> 2017 &copy; Sensors even down here </div>
    </div>

    <!--end-Footer-part-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
