                <ul>
                    <li><a href="@Url.Action("Index", "Home")">All Public Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Temperature Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Humidity Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Electric Power Consumtion Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Occupancy Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Door Sensors</a></li>
                    <li><a href="@Url.Action("Index", "Home")">Noise Sensors</a></li>
                </ul>
            </li>
            @if (Request.IsAuthenticated)
            {
                <li class="submenu">
                    <a href="#"><i class="icon icon-th-list"></i> <span>Private Sensors</span> <span class="pull-right icon icon-chevron-down icon-chevron-down-moved-left"></span></a>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">All Private Sensors</a></li>
                        <li><a href="@Url.Action("Index", "Home")">Own Sensors</a></li>
                        <li><a href="@Url.Action("Index", "Home")">Shared Sensors</a></li>
                    </ul>
                </li>
            }
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li>@Html.ActionLink("Admin Panel", "About", "Home")</li>
            }
            @if (Request.IsAuthenticated)
            {
                <li><a href="@Url.Action("About", "Home")"><i class="icon icon-plus"></i> <span>Create Sensor</span></a></li>
            }
            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li>@Html.ActionLink("Create User", "About", "Home")</li>
            }
            <li><a href="@Url.Action("Contact", "Home")"><i class="icon icon-pencil"></i> <span>Contact</span></a></li>
        </ul>
    </div>
    <!--sidebar-menu-->
    <!--main-container-part-->
    <div id="content">
        <!--breadcrumbs-->
        <div id="content-header">
            <div id="breadcrumb"> <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a></div>
        </div>
        <!--End-breadcrumbs-->
        @RenderBody()
        <!--Action boxes-->
        <div class="container-fluid">
            <div>

            </div>
        </div>
    </div>

