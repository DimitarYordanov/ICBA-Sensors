@using ICBA.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@section Styles{
    @Styles.Render("~/Content/css/matrix-login.css")
}
<center><h2>@ViewBag.Title</h2></center>
<div class="loginbox">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "loginform", role = "form" }))
    {
        <center>
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Username)
                <div>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe,new { @class= "centered-checkbox" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default" />
                </div>
            </div>
            <hr />
            <div>
                @Html.ActionLink("Register as a new user", "Register")
            </div>
        </center>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval", "~/Scripts/js/jquery.min.js", "~/Scripts/js/matrix.login.js")
}